<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.base.mapper.EsNewsMapper">
    
    <resultMap type="EsNews" id="EsNewsResult">
        <result property="id"    column="id"    />
        <result property="title"    column="title"    />
        <result property="url"    column="url"    />
        <result property="publishDate"    column="publish_date"    />
        <result property="sourceDomain"    column="source_domain"    />
        <result property="createdAt"    column="created_at"    />
        <result property="updatedAt"    column="updated_at"    />
    </resultMap>

    <sql id="selectEsNewsVo">
        select id, title, url, publish_date, source_domain, created_at, updated_at from es_news
    </sql>

    <select id="selectEsNewsList" parameterType="EsNews" resultMap="EsNewsResult">
        <include refid="selectEsNewsVo"/>
        <where>  
            <if test="title != null  and title != ''"> and title = #{title}</if>
            <if test="url != null  and url != ''"> and url = #{url}</if>
            <if test="publishDate != null "> and publish_date = #{publishDate}</if>
            <if test="sourceDomain != null  and sourceDomain != ''"> and source_domain = #{sourceDomain}</if>
            <if test="createdAt != null "> and created_at = #{createdAt}</if>
            <if test="updatedAt != null "> and updated_at = #{updatedAt}</if>
        </where>
    </select>
    
    <select id="selectEsNewsByUrl" parameterType="String" resultMap="EsNewsResult">
        <include refid="selectEsNewsVo"/>
        where url = #{url}
    </select>
    
    <select id="selectEsNewsById" parameterType="Long" resultMap="EsNewsResult">
        <include refid="selectEsNewsVo"/>
        where id = #{id}
    </select>

    <insert id="insertEsNews" parameterType="EsNews" useGeneratedKeys="true" keyProperty="id">
        insert into es_news
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">title,</if>
            <if test="url != null and url != ''">url,</if>
            <if test="publishDate != null">publish_date,</if>
            <if test="sourceDomain != null">source_domain,</if>
            <if test="createdAt != null">created_at,</if>
            <if test="updatedAt != null">updated_at,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">#{title},</if>
            <if test="url != null and url != ''">#{url},</if>
            <if test="publishDate != null">#{publishDate},</if>
            <if test="sourceDomain != null">#{sourceDomain},</if>
            <if test="createdAt != null">#{createdAt},</if>
            <if test="updatedAt != null">#{updatedAt},</if>
         </trim>
    </insert>

    <update id="updateEsNews" parameterType="EsNews">
        update es_news
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="url != null and url != ''">url = #{url},</if>
            <if test="publishDate != null">publish_date = #{publishDate},</if>
            <if test="sourceDomain != null">source_domain = #{sourceDomain},</if>
            <if test="createdAt != null">created_at = #{createdAt},</if>
            <if test="updatedAt != null">updated_at = #{updatedAt},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteEsNewsById" parameterType="Long">
        delete from es_news where id = #{id}
    </delete>

    <delete id="deleteEsNewsByIds" parameterType="String">
        delete from es_news where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>